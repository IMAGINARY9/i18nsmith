{
  "name": "i18nsmith",
  "version": "0.3.2",
  "description": "CLI for i18nsmith",
  "type": "module",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "bin": {
    "i18nsmith": "dist/index.cjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "node build.mjs",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "chalk": "^5.0.0",
    "commander": "^11.0.0",
    "diff": "^8.0.2",
    "fast-glob": "^3.3.3",
    "inquirer": "^9.0.0",
    "p-limit": "^7.2.0",
    "p-retry": "^7.1.0",
    "ts-morph": "^21.0.0"
  },
  "devDependencies": {
    "@i18nsmith/core": "workspace:*",
    "@i18nsmith/transformer": "workspace:*",
    "@i18nsmith/translation": "workspace:*",
    "@i18nsmith/translator-mock": "workspace:*",
    "esbuild": "^0.25.0"
  }
}
