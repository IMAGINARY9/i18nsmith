{
  "version": 1,
  "sourceLanguage": "en",
  "targetLanguages": [],
  "localesDir": "packages/transformer/locales",
  "include": [
    "src/**/*.vue",
    "src/**/*.{ts,js}"
  ],
  "exclude": [
    "**/*.test.*",
    "**/*.spec.*"
  ],
  "minTextLength": 1,
  "translation": {
    "provider": "manual"
  },
  "translationAdapter": {
    "module": "vue-i18n",
    "hookName": "useI18n"
  },
  "keyGeneration": {
    "namespace": "common",
    "shortHashLen": 6
  },
  "seedTargetLocales": false
}