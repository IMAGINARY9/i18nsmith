{
  "sourceLanguage": "en",
  "targetLanguages": ["es", "fr"],
  "localesDir": "locales",
  "include": ["**/*.{ts,tsx,js,jsx,vue}"],
  "exclude": ["node_modules/**", ".next/**", "dist/**"],
  "extraction": {
    "minTextLength": 3,
    "minLetterCount": 2,
    "minLetterRatio": 0.5
  },
  "translationAdapter": {
    "module": "@i18nsmith/translation",
    "hookName": "t"
  }
}