{
  "name": "i18nsmith-monorepo",
  "private": true,
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "build:packages": "pnpm --filter \"@i18nsmith/*\" build",
    "build:workspace": "pnpm -w -r run build",
    "package:extension": "pnpm --filter i18nsmith-vscode exec -- vsce package --no-dependencies",
    "package:extension:local": "pnpm --filter i18nsmith-vscode exec -- vsce package",
    "publish:cli:hint": "node -e \"console.log('Run from CI with NPM_TOKEN set or run locally: cd packages/cli && npm publish --access public')\"",
    "publish:extension:hint": "node -e \"console.log('Publish via vsce or upload the VSIX to Marketplace/Release; set VSCE_TOKEN when running vsce publish')\"",
    "release:all:hint": "node -e \"console.log('Use `pnpm run build:workspace && pnpm run package:extension` then publish CLI and extension with appropriate tokens')\"",
    "clean": "rm -rf packages/*/dist packages/*/*.tsbuildinfo",
    "rebuild": "pnpm clean && pnpm build",
    "pretest": "pnpm build",
    "test": "pnpm --filter \"@i18nsmith/*\" test",
    "check:packages": "node ./scripts/check-package-resolution.mjs",
    "lint": "eslint 'packages/*/src/**/*.{ts,tsx}' --max-warnings 0",
    "lint:fix": "eslint 'packages/*/src/**/*.{ts,tsx}' --fix",
    "external:transform": "node ./scripts/run-external-transform.mjs"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/inquirer": "^9.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.9.3",
    "vitest": "^0.34.0"
  },
  "dependencies": {
    "semver": "7.6.0"
  },
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "overrides": {
      "semver": "7.6.0"
    }
  },
  "packageManager": "pnpm@10.5.1"
}
